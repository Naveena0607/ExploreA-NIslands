<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/greenleaf"
    tools:context=".history">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbarB"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#00bfff"
        tools:ignore="MissingConstraints" />
    <LinearLayout
        android:id="@+id/linearLayout3"
        android:layout_width="0dp"
        android:layout_height="140dp"
        android:orientation="vertical"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/textView4"
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="55dp"
            android:fontFamily="@font/allan"
            android:gravity="center"
            android:text="History Of Andaman &amp; Nicobar Islands"
            android:textColor="@color/white"
            android:textSize="35dp"
            android:textStyle="bold" />

    </LinearLayout>
    <LinearLayout
        android:id="@+id/linearLayout4"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="140dp"
        android:background="@drawable/backhome"
        android:orientation="vertical"
        android:weightSum="3"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" >
        <ScrollView
            android:id="@+id/scrollview"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginLeft="15dp"
            android:layout_marginTop="0dp"
            android:layout_marginEnd="15dp"
            android:layout_marginRight="15dp"
            android:scrollbars="none"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/bestback">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_marginTop="0dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:layout_marginTop="25dp"
                    android:orientation="horizontal">
                    <androidx.cardview.widget.CardView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_weight="1"
                        android:elevation="15dp"
                        app:cardCornerRadius="0dp">
                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">

                            <ImageView
                                android:id="@+id/headerback"
                                android:layout_width="390dp"
                                android:layout_height="match_parent"
                                android:scaleType="centerCrop"
                                android:src="@drawable/hist"
                                android:transitionName="background_image_transition" />

                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/textview5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dp"
                        android:fontFamily="@font/courgette"
                        android:text="      Andaman and Nicobar have rich history dating back since 800 BC. These Islands are one of the famous Islands in the world and they have the best beaches in India."
                        android:textColor="@color/black"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/textview6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="25dp"
                        android:fontFamily="@font/allan"
                        android:text=" Photo Gallery"
                        android:textColor="@color/black"
                        android:textSize="22sp"
                        android:textStyle="bold" />
                    <HorizontalScrollView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:orientation="horizontal">


                        <ImageView
                            android:id="@+id/imaged"
                            android:layout_width="180dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="0dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hist1" />

                        <ImageView
                            android:id="@+id/imagee"
                            android:layout_width="180dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hist2" />

                        <ImageView
                            android:id="@+id/imagef"
                            android:layout_width="180dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hist3" />
                        <ImageView
                            android:id="@+id/imagem"
                            android:layout_width="180dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hist4" />
                        <ImageView
                            android:id="@+id/imageq"
                            android:layout_width="180dp"
                            android:layout_height="120dp"
                            android:layout_marginStart="10dp"
                            android:layout_marginLeft="0dp"
                            android:layout_marginTop="0dp"
                            android:scaleType="centerCrop"
                            android:src="@drawable/hist5" />

                    </LinearLayout>
                    </HorizontalScrollView>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">
                        <TextView
                            android:id="@+id/textviewc"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="25dp"
                            android:fontFamily="@font/allan"
                            android:text=" Historical Events "
                            android:textColor="@color/black"
                            android:textSize="25sp"
                            android:textStyle="bold" />
                        <TextView
                            android:id="@+id/textviewd"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:fontFamily="@font/allan"
                            android:text="1.First inhabitants"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textviewb"
                                android:layout_width="260dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/courgette"
                                android:text="      The earliest archaeological evidence documents some 2,200 years. However, genetic and cultural studies suggest that the indigenous Andamanese people may have been isolated from other"
                                android:textSize="16dp"
                                android:textColor="@color/black"
                                />

                            <ImageView
                                android:id="@+id/imagea"
                                android:layout_width="120dp"
                                android:layout_height="120dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="0dp"
                                android:layout_marginRight="0dp"
                                android:layout_marginTop="15dp"
                                android:src="@drawable/people1" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/textviewf"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/courgette"
                            android:text="      populations during the Middle Paleolithic, which ended 30,000 years ago.[10] Since that time, the Andamanese have diversified into linguistically and culturally distinct, territorial groups."
                            android:textSize="16dp"
                           android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/textviewg"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/courgette"
                            android:text="The Nicobar Islands appear to have been populated by people of various backgrounds. By the time of European contact, the indigenous inhabitants had coalesced into the Nicobarese people, speaking a Austroasiatic language, and the Shompen, whose language is of uncertain affiliation. Neither language is related to Andamanese."
                            android:textSize="16dp"
                            android:textColor="@color/black"
                            />

                        <TextView
                            android:id="@+id/textviewi"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/allan"
                            android:text="2.Chola empire period"
                            android:textColor="@color/black"
                            android:textSize="22sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textviewh"
                                android:layout_width="260dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/courgette"
                                android:text="      Rajendra Chola I (1014–1042 CE), used the Andaman and Nicobar Islands as a strategic "
                                android:textSize="16dp"
                                android:textColor="@color/black"/>

                            <ImageView
                                android:id="@+id/imagec"
                                android:layout_width="94dp"
                                android:layout_height="57dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="5dp"
                                android:layout_marginRight="0dp"
                                android:src="@drawable/chola" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/textviewk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="0dp"
                            android:fontFamily="@font/courgette"
                            android:text="naval base to launch an expedition against the Srivijaya Empire (modern-day Indonesia)."
                            android:textSize="16dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/textviewj"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/courgette"
                            android:text="      The Cholas called the island Ma-Nakkavaram (great open/naked land), found in the Thanjavur inscription of 1050 CE. European traveller Marco Polo (12th–13th century) also referred to this island as 'Necuverann' and a corrupted form of the Tamil name Nakkavaram would have led to the modern name Nicobar during the British colonial period."
                            android:textSize="16dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/textviewm"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/allan"
                            android:text="3.Danish colonial period and British rule"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textviewl"
                                android:layout_width="260dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/courgette"
                                android:text="The history of organised European colonisation on the islands began when settlers from the Danish East India Company arrived in the Nicobar Islands on 12 December 1755."
                                android:textSize="16dp"
                               android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/imageg"
                                android:layout_width="94dp"
                                android:layout_height="106dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="0dp"
                                android:src="@drawable/british" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/textviewn"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/courgette"
                            android:text="      During 1754–1756 they were administrated from Tranquebar (in continental Danish India). The islands were repeatedly abandoned due to outbreaks of malaria between 14 April 1759 and 19 August 1768, from 1787 to 1807/05, 1814 to 1831, 1830 to 1834 and gradually from 1848 for good."
                            android:textSize="16dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/textviewo"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/courgette"
                            android:text="      From 1 June 1778 to 1784, Austria mistakenly assumed that Denmark had abandoned its claims to the Nicobar Islands and attempted to establish a colony on them, renaming them Theresia Islands.In 1789 the British set up a naval base and penal colony on Chatham Island next to Great Andaman, where now lies the town of Port Blair.Denmark's presence in the territory ended formally on 16 October 1868 when it sold the rights to the Nicobar Islands to Britain, which made them part of British India in 1869.In 1858 the British again established a colony at Port Blair, which proved to be more permanent.In 1872 the Andaman and Nicobar islands were united under a single chief commissioner at Port Blair."
                            android:textSize="16dp"
                           android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/textview2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/allan"
                            android:text="4.World War II"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textview3"
                                android:layout_width="280dp"
                                android:layout_height="match_parent"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/courgette"
                                android:text="      During World War II, the islands were practically under Japanese control, only nominally under the authority of the Arzi Hukumate Azad Hind of Subhash Chandra Bose."
                                android:textColor="@color/black"
                                android:textSize="16dp" />

                            <ImageView
                                android:id="@+id/imageh"
                                android:layout_width="94dp"
                                android:layout_height="108dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="0dp"
                                android:src="@drawable/ww2" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/textviewp"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="8dp"
                            android:fontFamily="@font/courgette"
                            android:text="      General Loganathan, of the Indian National Army, was made the Governor of the Andaman and Nicobar Islands. On 22 February 1944 he along with four INA officers—Major Mansoor Ali Alvi, Sub. Lt. Md. Iqbal, Lt. Suba Singh, and stenographer Srinivasan—arrived at Lambaline Airport in Port Blair. On 21 March 1944, the Headquarters of the Civil Administration was established near the gurdwara at Aberdeen Bazaar. On 2 October 1944, Col. Loganathan handed over the charge to Maj. Alvi and left Port Blair, never to return.Japanese Vice Admiral Hara Teizo and Major-General Tamenori Sato surrendered the islands to Brigadier J A Salomons, commander of 116th Indian Infantry Brigade, and Chief Administrator Noel K Patterson, Indian Civil Service, on 7 October 1945, in a ceremony performed on the Gymkhana Ground, Port Blair."
                            android:textSize="16dp"
                          android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/textview4"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/allan"
                            android:text="5.After independence"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textview7"
                                android:layout_width="260dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/courgette"
                                android:text="      During the independence of both India (1947) and Burma (1948), the departing British announced their intention to resettle all Anglo-Indians"
                                android:textSize="16dp"
                                android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/imagei"
                                android:layout_width="94dp"
                                android:layout_height="77dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="0dp"
                                android:src="@drawable/after" />



                        </LinearLayout>

                        <TextView
                            android:id="@+id/textview8"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="8dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="0dp"
                            android:fontFamily="@font/courgette"
                            android:text="and Anglo-Burmese on these islands to form their own nation, although this never materialised. It became part of India in 1950 and was declared as a union territory of the nation in 1956."
                            android:textSize="16dp"
                           android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/textviewr"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/courgette"
                            android:text="      India has been developing defence facilities on the islands since the 1980s. The islands now have a key position in India's strategic role in the Bay of Bengal and the Malacca Strait."
                            android:textSize="16dp"
                            android:textColor="@color/black" />
                        <TextView
                            android:id="@+id/textview9"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="15dp"
                            android:fontFamily="@font/allan"
                            android:text="6.2004 tsunami"
                            android:textColor="@color/black"
                            android:textSize="20sp"
                            android:textStyle="bold" />
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="5dp"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/textview0"
                                android:layout_width="260dp"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="8dp"
                                android:layout_marginTop="0dp"
                                android:fontFamily="@font/courgette"
                                android:text="      On 26 December 2004, the coasts of the Andaman and Nicobar Islands were devastated by a 10 m (33 ft) high tsunami following an undersea earthquake in the Indian Ocean."
                                android:textSize="16dp"
                              android:textColor="@color/black" />

                            <ImageView
                                android:id="@+id/imagej"
                                android:layout_width="100dp"
                                android:layout_height="100dp"
                                android:layout_marginStart="8dp"
                                android:layout_marginLeft="0dp"
                                android:layout_marginTop="15dp"
                                android:layout_marginRight="0dp"
                                android:scaleType="centerCrop"
                                android:src="@drawable/tsunami" />

                        </LinearLayout>
                        <TextView
                            android:id="@+id/textviews"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/courgette"
                            android:text="      More than 2,000 people lost their lives, 4,000 children were orphaned or suffered the loss of one parent, and at least 40,000 people were rendered homeless. More than 46,000 people were injured.[16] The worst affected Nicobar islands were Katchal and Indira Point; the latter subsided 4.25 metres (13.9 feet) and was partially submerged in the ocean. The lighthouse at Indira Point was damaged but has been repaired since. A significant portion of the union territory was submerged and subsequently lost to sea. The territory which measured 8,073 km2 (3,117 sq mi) before the tsunami now stands at 7,950 km2 (3,070 sq mi)"
                            android:textSize="16dp"
                            android:textColor="@color/black"/>
                        <TextView
                            android:id="@+id/textviewt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="5dp"
                            android:layout_marginLeft="8dp"
                            android:layout_marginTop="5dp"
                            android:fontFamily="@font/courgette"
                            android:text="      While the locals and tourists on the islands suffered the greatest casualties from the tsunami, most of the aboriginal people survived on account of oral traditions passed down over generations that warned them to evacuate from the large waves that follow earthquakes."
                            android:textSize="16dp"
                            android:textColor="@color/black" />


                    </LinearLayout>


                </LinearLayout>
            </LinearLayout>
        </ScrollView>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>